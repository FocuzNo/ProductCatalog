@model ProductCatalog.DAL.Entities.UserDto

@{
    ViewData["Title"] = "Аутентификация для продвинутого пользователя";
}

@TempData["successMessage"]
@TempData["errorMessage"]
<hr />
<form asp-action="Login" asp-controller="Home" class="form-auth">
    <h2>Аутентификация для продвинутого пользователя</h2>
    <p>
        <label asp-for="Username">Имя пользователя</label><br />
        <input type="text" asp-for="Username" />
    </p>
    <p>
        <label asp-for="Password">Пароль</label><br />
        <input type="password" asp-for="Password" />
    </p>
    <p>
        <input type="submit" value="Войти" />
    </p>
</form>

