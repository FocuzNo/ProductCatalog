@model ProductCatalog.DAL.Entities.User

@{
    ViewData["Title"] = "Authorization";
}

    <h2>Авторизация</h2>
    <form asp-action="Register" asp-controller="Home">
        <p>
            <label asp-for="Username">Имя</label><br />
            <input type="text" asp-for="Username" />
        </p>
        <p>
            <label asp-for="PasswordHash">Пароль</label><br />
            <input type="password" asp-for="PasswordHash" />
        </p>
        <p>
            <input type="submit" value="Отправить" />
        </p>
    </form>
